# core
AKANE_ENV=dev
AKANE_LOG_LEVEL=INFO
AKANE_INTERNAL_API_TOKEN=<CHANGE_ME_INTERNAL_API_TOKEN>
AKANE_TIMEZONE=Asia/Tokyo

# api / bot
AKANE_API_HOST=0.0.0.0
AKANE_API_PORT=8080
AKANE_API_BASE_URL=http://akane-api:8080
AKANE_BOT_API_TIMEOUT_SEC=15
AKANE_BOT_TOKEN=
AKANE_DISCORD_APP_ID=
AKANE_DISCORD_GUILD_ID=
AKANE_ADMIN_USER_IDS=

# db / redis
POSTGRES_DB=akane
POSTGRES_USER=akane
POSTGRES_PASSWORD=<CHANGE_ME_DB_PASSWORD>
AKANE_DB_DSN=postgresql+psycopg://akane:<CHANGE_ME_DB_PASSWORD>@postgres:5432/akane
AKANE_REDIS_URL=redis://redis:6379/0
AKANE_REDIS_DB=0

# llm
AKANE_LLM_ROUTING_MODE=priority
AKANE_LLM_PRIMARY=codex_app_server
AKANE_LLM_FALLBACKS=kimi,glm
AKANE_LLM_TIMEOUT_SEC=10
AKANE_LLM_TOTAL_TIMEOUT_SEC=20
AKANE_LLM_MODEL=
AKANE_MAX_CONTEXT_TOKENS=8000
AKANE_CODEX_BASE_URL=
# local host mode: ws://host.docker.internal:4000
# vps default mode (docker-compose.vps.yml): https://api.openai.com
# vps codex mode (docker-compose.vps.codex.yml): ws://codex-app-server:4000
AKANE_CODEX_API_PATH=/v1/responses
AKANE_CODEX_AUTH_MODE=none
# API key mode requires this value for OpenAI direct mode.
# In codex login mode, leave empty and run `codex login --device-auth`.
AKANE_CODEX_API_TOKEN=
AKANE_CODEX_CLIENT_ID=
AKANE_CODEX_CLIENT_SECRET=
AKANE_KIMI_BASE_URL=https://api.moonshot.ai/v1
AKANE_KIMI_API_KEY=
AKANE_KIMI_MODEL=
AKANE_GLM_BASE_URL=https://api.z.ai/api/paas/v4/
AKANE_GLM_API_KEY=
AKANE_GLM_MODEL=

# conversation memory
AKANE_CONV_HISTORY_SIZE=20
AKANE_CONV_HISTORY_TTL_SEC=86400
AKANE_MEMORY_DIR=/workspace/memory
AKANE_SOUL_PATH=/workspace/SOUL.md

# tools
AKANE_ALLOWED_PATHS=/workspace
AKANE_ALLOWED_COMMANDS=ls,cat,grep,find,git,python
AKANE_APPROVAL_REQUIRED_COMMANDS=rm,pip,apt
AKANE_TOOL_TIMEOUT_SEC=30

# scheduler / heartbeat
AKANE_HEARTBEAT_ENABLED=true
AKANE_HEARTBEAT_INTERVAL_MIN=30
AKANE_HEARTBEAT_CHANNEL_ID=
AKANE_SCHEDULER_LOCK_TTL_SEC=60

# embedding
AKANE_EMBEDDING_PROVIDER=local
AKANE_EMBEDDING_MODEL=all-MiniLM-L6-v2
AKANE_EMBEDDING_DIM=384
